<%= form_for [post.category, post], html: {class: "create-post"} do |f| %>
<%= f.label :title, 'Title' %>
<%= f.text_field :title %>
<%= f.label :text, 'Text' %>
<%= f.text_area :text %>
<%= f.label :email, 'Email Address' %>
<%= f.email_field :email %>
<%= f.label :price, "Price" %>
<%= f.text_field :price %>
<%= f.label :tag_list, "Tags" %>
<%= f.text_field :tag_list %>
<%= f.submit  %>
<% end %>
